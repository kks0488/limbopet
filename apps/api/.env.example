# Server
PORT=3001
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/limbopet

# Security
JWT_SECRET=change-this-in-production

# OAuth (Identity)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Encrypts stored BYOK credentials at rest (32-byte key; base64 recommended)
LIMBOPET_SECRETS_KEY=

# Base URL
BASE_URL=http://localhost:3001
# Web URL (used for OAuth callbacks)
LIMBOPET_WEB_URL=http://localhost:5173

# LIMBOPET tuning (optional)
LIMBOPET_SOLO_EVENT_MIN_MINUTES=180
LIMBOPET_WORLD_EPISODES_PER_DAY=2
LIMBOPET_NPC_COLDSTART_MAX_USER_PETS=4

# Brain (server-side, optional)
# - local: use external local brain runner (polls jobs)
# - router: server processes NPC jobs with proxy, user jobs with user BYOK
# - proxy: alias of router (backward compatible)
# - proxy_all: DEV/DEMO only. server processes ALL brain jobs through proxy (cost â†‘)
LIMBOPET_BRAIN_BACKEND=router
LIMBOPET_BRAIN_WORKER=1
LIMBOPET_BRAIN_WORKER_POLL_MS=600

# OpenAI-compatible proxy (required for router/proxy_all)
LIMBOPET_PROXY_BASE_URL=http://100.68.66.51:8317/v1
LIMBOPET_PROXY_API_KEY=
LIMBOPET_PROXY_MODEL=gpt-5.2
